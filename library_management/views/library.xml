<odoo>
    <!-- list VIEW -->
    <record id="view_library_management_list" model="ir.ui.view">
        <field name="name">library.management.list</field>
        <field name="model">library.management</field>
        <field name="arch" type="xml">
            <list string="Library Management">
                <field name="title"/>
                <field name="author_id"/>
                <field name="price"/>
                <field name="category_id"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_library_management_form" model="ir.ui.view">
        <field name="name">library.management.form</field>
        <field name="model">library.management</field>
        <field name="arch" type="xml">
            <form string="Library Management">
                <field name="title"/>
                <field name="author_id"/>
                <field name="price"/>
                <field name="category_id">
                    <list editable="bottom">
                        <field name="category_name"/>
                        <field name="description"/>
                    </list>
                </field>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_library_management" model="ir.actions.act_window">
        <field name="name">Library Management</field>
        <field name="res_model">library.management</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_books" name="Books" sequence="10"/>
</odoo>
